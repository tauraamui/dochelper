<root_window title="Dochelper" width="800" height="600">
	<tab id="0" title="Letter">
		<named_list name="Letter Templates" type="drop down" source="letter_templates" tag="{letter_templates}"/>
		<named_field id="0" name="Ref #" type="plain_text" tag="{ref}"/>
		<named_date_picker id="1" name="Letter Date" format="dd/MM/yyyy" tag="{letter_date}"/>
		<named_field id="2" name="Title: (Mr/Mrs/Miss)" type="plain_text" tag="{title}"/>
		<named_field id="3" name="Patient Full Name" type="plain_text" tag="{patient_full_name}"/>
		<named_field id="4" name="Patient Abbr. Name" type="plain_text" tag="{patient_abbreviated_name}"/>
		<named_field id="5" name="Address Line 1" type="plain_text" tag="{address_line_1}"/>
		<named_field id="6" name="Address Line 2" type="plain_text" tag="{address_line_2}"/>
		<named_field id="7" name="Address Line 3" type="plain_text" tag="{address_line_3}"/>
		<named_field id="8" name="Address Line 4" type="plain_text" tag="{address_line_4}"/>
		<named_field id="9" name="Post Code" type="plain_text" tag="{post_code}"/>
		<named_date_picker name="Appointment Date" format="dd/MM/yyyy" tag="{appointment_date}"/>
		<named_field name="Appointment Time" type="plain_text" tag="{appointment_time}"/>
		<output_directory path="Completed Letters" suffix1="{patient_abbreviated_name}"/>
	</tab>
	
	<tab id="1" title="Invoice">
		<named_list name="Invoice Templates" type="drop down" source="invoice_templates" tag="{invoice_templates}"/>
		<named_field id="0" name="Ref #" type="plain_text" tag="{ref}"/>
		<named_date_picker id="1" name="Letter Date" format="dd/MM/yyyy" tag="{letter_date}"/>
		<named_field id="2" name="Title: (Mr/Mrs/Miss)" type="plain_text" tag="{title}"/>
		<named_field id="3" name="Patient Full Name" type="plain_text" tag="{patient_full_name}"/>
		<named_field id="4" name="Patient Abbr. Name" type="plain_text" tag="{patient_abbreviated_name}"/>
		<named_field id="5" name="Address Line 1" type="plain_text" tag="{address_line_1}"/>
		<named_field id="6" name="Address Line 2" type="plain_text" tag="{address_line_2}"/>
		<named_field id="7" name="Address Line 3" type="plain_text" tag="{address_line_3}"/>
		<named_field id="8" name="Address Line 4" type="plain_text" tag="{address_line_4}"/>
		<named_field id="9" name="Post Code" type="plain_text" tag="{post_code}"/>
	</tab>

	<link source_tab_id="0" source_id="0" destination_tab_id="1" destination_id="0"/>
	<link source_tab_id="0" source_id="1" destination_tab_id="1" destination_id="1"/>
	<link source_tab_id="0" source_id="2" destination_tab_id="1" destination_id="2"/>
	<link source_tab_id="0" source_id="3" destination_tab_id="1" destination_id="3"/>
	<link source_tab_id="0" source_id="4" destination_tab_id="1" destination_id="4"/>
	<link source_tab_id="0" source_id="5" destination_tab_id="1" destination_id="5"/>
	<link source_tab_id="0" source_id="6" destination_tab_id="1" destination_id="6"/>
	<link source_tab_id="0" source_id="7" destination_tab_id="1" destination_id="7"/>
	<link source_tab_id="0" source_id="8" destination_tab_id="1" destination_id="8"/>
	<link source_tab_id="0" source_id="9" destination_tab_id="1" destination_id="9"/>
</root_window>